{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "target": "es2018",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*"]
}
